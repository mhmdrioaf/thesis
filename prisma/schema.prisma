generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  password      String?
  name          String
  email         String    @unique
  emailVerified DateTime?
  image         String?
  products      Product[]
  ratedProducts Rating[]

  @@unique([email, username], name: "user_identifier")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  thumbnail   String?
  images      String[]
  description String
  user        User?    @relation(fields: [seller], references: [id], onDelete: Cascade)
  ratings     Rating[]
  seller      String?
}

model Rating {
  id                 String   @id @default(cuid())
  commentedAt        DateTime @default(now())
  commentatorId      String
  commentValue       String
  commentedProductId Int
  ratingValue        Float
  user               User?    @relation(fields: [commentatorId], references: [id], onDelete: Cascade)
  product            Product? @relation(fields: [commentedProductId], references: [id], onDelete: Cascade)
}
